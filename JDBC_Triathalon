
import java.sql.*;

public class JDBC_TRIATHALON {

	private Athlete athlete;
	private Running runTime;
	private Swimming swimTime;
	private Biking bikeTime;

	public JDBC_TRIATHALON() {
	}

	public void pullTuple() throws SQLException, ClassNotFoundException {
		Class.forName("com.mysql.jdbc.Driver");
		Connection connection = DriverManager.getConnection("jdbcLmysql://localhost/triathalon", "root", "mysqlpwd");
		Statement stmt = connection.createStatement();
		ResultSet resultSet = stmt.executeQuery("select firstname, lastname, gender, id, runtime, swimtime, biketime from participants");
		this.athlete = new Athlete(resultSet.getString(1), resultSet.getString(2), resultSet.getString(3),resultSet.getString(4));
		this.runTime = new Running( resultSet.getInt(5));
		this.swimTime = new Swimming( resultSet.getInt(6));
		this.bikeTime = new Biking(resultSet.getInt(7));
	}

	public Athlete getAthlete() {
		return athlete;
	}

	public Running getRunTime() {
		return runTime;
	}

	public Swimming getSwimTime() {
		return swimTime;
	}

	public Biking getBikeTime() {
		return bikeTime;
	}

}
